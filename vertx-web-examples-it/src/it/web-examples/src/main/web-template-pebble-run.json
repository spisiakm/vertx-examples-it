{
  "name": "web-template-pebble",

  "tags": ["web", "template", "pebble"],

  "libraries": [
    "${dependencies}/vertx-web-templ-pebble-${vertx.version}-shaded.jar",
    "${dependencies}/coverity-escapers"
  ],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -jar ${jarFile} run io.vertx.example.web.templating.pebble.Server"
    }

  },

  "grace-text": "Succeeded in deploying verticle",
  "client-check": "web-template-pebble-check.groovy"
}