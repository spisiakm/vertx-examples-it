{
  "name": "web-template-freemarker",

  "tags": ["web", "template", "freemarker"],

  "libraries": [
    "${dependencies}/vertx-web-templ-freemarker-${vertx.version}-shaded.jar",
    "${dependencies}/freemarker"
  ],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -jar ${jarFile} run io.vertx.example.web.templating.freemarker.Server"
    }

  },

  "grace-text": "Succeeded in deploying verticle",
  "client-check": "web-template-freemarker-check.groovy"
}