{
  "name": "web-template-thymeleaf",

  "tags": ["web", "template", "thymeleaf"],

  "libraries": [
    "${dependencies}/javassist",
    "${dependencies}/attoparser",
    "${dependencies}/unbescape",
    "${dependencies}/slf4j-api"
  ],

  "executions": {

    "java" : {
      "directory" : "${base}/target/classes",
      "command" : "java -jar ${jarFile} run io.vertx.example.web.templating.thymeleaf.Server"
    }

  },

  "grace-text": "Succeeded in deploying verticle",
  "client-check": "web-template-thymeleaf-check.groovy"
}